@page
@model Loggma1.Pages.Clients.IndexModel
@{
}
<br>
<form method="post" asp-page-handler="Logout">
    <button type="submit" class="btn btn-primary btn-sm">Logout</button>
</form>
<form method="post">
    <div class="form-group">
        <label for="SearchTerm">Arama:</label>
        <input type="text" id="SearchTerm" class="form-control" placeholder="Arama yapın..." asp-for="SearchTerm">
    </div>

    <div class="form-group">
        <label for="SearchBy">Arama Kriteri:</label>
        <select id="SearchBy" class="form-control" asp-for="SearchBy">
            <option value="name">Ad</option>
            <option value="email">E-posta</option>
            <option value="phone">Telefon</option>
            <!-- Diğer kriterleri buraya ekleyin -->
        </select>
    </div>
    <br />
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Ara</button>
</form>

<h2>List of Clients</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'>New Client</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Identity Number</th> <!-- Ekledik -->
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.IdentityNumber</td> <!-- Ekledik -->
                <td>
                    <a class="btn btn-primary btn-sm" asp-page="/Clients/Edit" asp-route-id="@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="/Clients/Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
